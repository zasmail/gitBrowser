{{#if isDynamic}}
  <button {{action 'startInputting' on="click"}}>
    {{#if isInputting}}
      {{input type="text" value=content on="key-press"}}
      <button {{action 'stopInputting' on="click"}}>okay</button>
    {{else}}
      {{~content~}}
    {{/if}}
  </button>
{{else}}
  {{~content~}}
{{/if}}